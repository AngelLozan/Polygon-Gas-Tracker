{
  "name": "Polygon-Matic Gas Tracker",
  "description": "An app to track Polygon gas prices compliant with EIP-1559. Has real-time block streaming. Displays real-time price information",
  "version": "1.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },

   "icons": {
    "16": "logo-small.png",
    "32": "logo-small.png",
    "48": "logo-small.png",
    "128": "logo-small.png"
  },

  "content_security_policy": {
    "extension_pages" : "script-src 'self' https://unpkg.com/@solana/web3.js@latest/lib/index.iife.min.js; connect-src 'self' https://api.coingecko.com/api/v3/simple/price; object-src 'self'"
 },

"permissions": ["alarms"],

  "action": {
    "default_popup": "popup.html",
    "default_icon": "logo-small.png"
  }
}